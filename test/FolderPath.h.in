#ifndef DPLANNER_FOLDERPATH_H_IN
#define DPLANNER_FOLDERPATH_H_IN

#define BIN_DIR "@CMAKE_BINARY_DIR@"

inline std::string getAbsDirPath(std::string dir)
{
    return std::string(BIN_DIR) + "/" + dir;
}

